        .select-wrapper {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 20px;
            max-width: 800px;
            margin: 50px auto;
        }

        .option {
            background-color: #fffae5;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
            cursor: pointer;
            transition: transform 0.2s;
        }

        .option:hover {
            transform: translateY(-3px);
        }

        .yellow { background-color: #fff8b3; }
        .blue   { background-color: #d6f5ff; }
        .pink   { background-color: #ffe0e6; }
        .gray   { background-color: #f0f0f0; }

        .add-option {
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 40px;
            color: #888;
        }

        .add-option:hover {
            background-color: #ddd;
        }
    </style>
